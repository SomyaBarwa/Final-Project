CREATE TABLE notes (
   id INTEGER PRIMARY KEY NOT NULL,
   user_id INTEGER NOT NULL,
   note TEXT NOT NULL,
   time DATETIME DEFAULT CURRENT_TIMESTAMP,
   FOREIGN KEY (user_id) REFERENCES users(id)
);

